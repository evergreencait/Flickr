@model IEnumerable<Flickr.Models.Post>
@{
    ViewData["Title"] = "Question Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Here is your list of posts, @User.Identity.Name</h2>
<hr />

@if (Model.Any())
{

    @foreach (var post in Model)
    {
        <a href='@Url.Action("Details", new { id = post.Id })'>
            <img src="@Html.DisplayFor(modelProduct => post.ImagePath)"/>
        </a>
        <p>@Html.ActionLink("Delete", "Delete", new { id = post.Id })</p>
        <p>@Html.ActionLink("Edit", "Edit", new { id = post.Id })</p>

    }

}
else
{
    <p>No posts have been added yet!</p>
}
<p>

    @Html.ActionLink("Create new", "Create")
</p>