
@{
    ViewData["Title"] = "Question Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Flickr.Models.Post

<img src=" @Html.DisplayFor(model => model.ImagePath) " alt="Alternate Text" />
<p>
    @Html.DisplayFor(model => model.Description)
</p>

<p>
@foreach (var postsTags in Model.PostsTags)
{
    
    <span>#@Html.ActionLink((string)@postsTags.Tag.Name, "Details", "Tags", new { id = @postsTags.Tag.TagId })</span>

}
</p>
